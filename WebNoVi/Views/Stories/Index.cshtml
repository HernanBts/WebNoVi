@model IEnumerable<WebNoVi.Models.Story>
@using Microsoft.AspNet.Identity

@{
    ViewBag.Title = "Testimonios";
}

<h2>Lista de testimonios:</h2>
@if (Request.IsAuthenticated)
{
    <p>
        @Html.ActionLink("Agregar", "Create")
    </p>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Hour)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Body)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Image)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Hour)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Body)
            </td>
            <td>
                <img width="100" src="@Url.Action("getImage", "Stories", new { id=item.StoryId })" />

                @*@Html.DisplayFor(modelItem => item.Image)*@
            </td>
            @if (Request.IsAuthenticated)
            {
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.StoryId }) |
                    @Html.ActionLink("Borrar", "Delete", new { id = item.StoryId })
                </td>
            }
        </tr>
    }

</table>
