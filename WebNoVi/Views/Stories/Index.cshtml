@model IEnumerable<WebNoVi.Models.Story>
@using Microsoft.AspNet.Identity

@{
    ViewBag.Title = "Testimonios";
}

<h2>Lista de testimonios:</h2>
@if (Request.IsAuthenticated)
{
    <p>
        @Html.ActionLink("Agregar", "Create", new { }, new { @class = "btn btn-success" })
    </p>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Hour)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Body)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Image)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Hour)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Body)
        </td>
        <td>
            <img width="100" src="@Url.Action("getImage", "Stories", new { id=item.StoryId })" />

            @*@Html.DisplayFor(modelItem => item.Image)*@
        </td>
        @if (Request.IsAuthenticated)
        {
            <td>
                <p class="">
                    @*@Html.ActionLink("Borrar", "../Queries/Delete", new { id = item.QueryId }, new { @class = "btn btn-danger" })*@
                    <a href="@Url.Action("Edit", "Stories", new { id = item.StoryId })" title="Editar">
                        <i class="fas fa-edit fa-2x"></i>
                    </a>
                </p>
                <p class="">
                    @*@Html.ActionLink("Borrar", "../Queries/Delete", new { id = item.QueryId }, new { @class = "btn btn-danger" })*@
                    <a href="@Url.Action("Delete", "Stories", new { id = item.StoryId })" title="Borrar">
                        <i class="fas fa-trash-alt fa-2x"></i>
                    </a>
                </p>
            </td>
        }
    </tr>
    }

</table>
