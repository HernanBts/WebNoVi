@model IEnumerable<WebNoVi.Models.Service>
@using Microsoft.AspNet.Identity

@{
    ViewBag.Title = "Servicios";
}

<h2>Lista de servicios</h2>

@if (Request.IsAuthenticated)
{
    <p>
        @Html.ActionLink("Agregar servicio", "Create", new { }, new { @class = "btn btn-success" })
    </p>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Resume)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Image)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Resume)
        </td>
        <td>
            <img width="100" src="@Url.Action("getImage", "Services", new { id=item.ServiceId })" />
            @*@Html.DisplayFor(modelItem => item.Image)*@
        </td>
        @if (Request.IsAuthenticated)
        {
            <td>
                <p class="">
                    @*@Html.ActionLink("Borrar", "../Queries/Delete", new { id = item.QueryId }, new { @class = "btn btn-danger" })*@
                    <a href="@Url.Action("Edit", "News", new { id = item.ServiceId })" title="Editar">
                        <i class="fas fa-edit fa-2x"></i>
                    </a>
                </p>
                <p class="">
                    @*@Html.ActionLink("Borrar", "../Queries/Delete", new { id = item.QueryId }, new { @class = "btn btn-danger" })*@
                    <a href="@Url.Action("Delete", "News", new { id = item.ServiceId })" title="Borrar">
                        <i class="fas fa-trash-alt fa-2x"></i>
                    </a>
                </p>
            </td>
        }
    </tr>
    }

</table>
