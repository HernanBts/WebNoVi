@model  WebNoVi.ModelView.MessageViewModel

@{
    ViewBag.Title = "Index";
}

<h2>Mensajes</h2>

<section class="w3-row w3-center">
    <h3>Consultas</h3>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Queries[1].Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Queries[1].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Queries[1].Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Queries[1].Subject)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Queries[1].Message)
            </th>
            @*<th>
            @Html.DisplayNameFor(model => model.Stories[1].Body)
        </th>*@
            <th></th>
        </tr>

        @foreach (var item in Model.Queries)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Subject)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Message)
            </td>
            <td>
                @Html.ActionLink("Borar", "Delete", "Queries", new { id = item.QueryId })
            </td>
            @*<td>
            @Html.DisplayFor(modelItem => item.Body)
        </td>*@
