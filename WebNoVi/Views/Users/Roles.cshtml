@model WebNoVi.ModelView.UserView

@{
    ViewBag.Title = "Roles";
}

<h2>Roles de usuario: @Model.Name</h2>

<p>
    @Html.ActionLink("Agregar Rol", "AddRole", new { userId = Model.UserId }, new { @class = "btn btn-primary" })
    @Html.ActionLink("Atras", "Index", new { } , new { @class = "btn btn-success" })
</p>
<table class="table">

    @for (int i = 0; i < Model.Roles.Count; i++)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => Model.Roles[i].Name)
            </td>
            <td>
                @Html.ActionLink("Delete", "Delete", new { userId = Model.UserId, roleId = Model.Roles[i].RoleId })
            </td>
        </tr>
    }

</table>

